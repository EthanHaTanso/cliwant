# AI Tax Assistant - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Database
# ===========================================
DATABASE_URL=sqlite+aiosqlite:///./data/ai_tax_assistant.db

# ===========================================
# Popbill API (은행 거래 조회)
# ===========================================
POPBILL_LINK_ID=your_link_id
POPBILL_SECRET_KEY=your_secret_key
POPBILL_CORP_NUM=your_corp_num
POPBILL_IS_TEST=true

# ===========================================
# Slack API (알림)
# ===========================================
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_CHANNEL_ID=C0123456789
SLACK_SIGNING_SECRET=your_signing_secret

# ===========================================
# Anthropic API (AI)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-your-key

# ===========================================
# Email (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com

# ===========================================
# Security
# ===========================================
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# ===========================================
# File Storage
# ===========================================
DOCUMENTS_PATH=~/ai-tax-assistant/documents
